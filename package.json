{
   "name": "@dhruwlalan/rega",
   "description": "REdux + saGA, Simplified",
   "version": "1.1.0",
   "author": "dhruw lalan <dhruwlalan22@gmail.com> (https://dhruwlalan.me/)",
   "repository": "https://github.com/dhruwlalan/rega",
   "homepage": "https://github.com/dhruwlalan/rega#readme",
   "bugs": "https://github.com/dhruwlalan/rega/issues",
   "main": "./dist/rega.js",
   "files": [
      "dist"
   ],
   "scripts": {
      "test": "jest",
      "test:watch": "jest --watch",
      "build": "esbuild src/rega.js --bundle --outdir=dist --platform=node --external:./node_modules/* --target=node14.18.0 --format=cjs --tree-shaking=true --minify",
      "prepublishOnly": "npm run build",
      "semantic-release": "semantic-release"
   },
   "dependencies": {
      "ramda": "^0.27.2",
      "redux-saga": "^1.1.3",
      "reselect": "^4.1.5",
      "seamless-immutable": "^7.1.4"
   },
   "devDependencies": {
      "@babel/cli": "^7.14.5",
      "@babel/core": "^7.14.6",
      "@babel/preset-env": "^7.14.5",
      "@babel/register": "^7.17.0",
      "@dhruwlalan/eslint-config": "^1.0.6",
      "@dhruwlalan/semantic-release-config": "^2.0.0",
      "esbuild": "^0.14.23",
      "eslint": "^8.9.0",
      "jest": "^27.5.1",
      "prettier": "^2.5.1",
      "semantic-release": "^19.0.2"
   },
   "peerDependencies": {
      "redux": "4.x",
      "redux-saga": "1.X"
   },
   "publishConfig": {
      "access": "public"
   },
   "release": {
      "extends": "@dhruwlalan/semantic-release-config"
   },
   "ava": {
      "files": [
         "test/**/*"
      ],
      "verbose": true,
      "require": [
         "@babel/register"
      ],
      "babel": {
         "testOptions": {
            "babelrc": false
         }
      }
   },
   "eslintConfig": {
      "extends": [
         "@dhruwlalan"
      ],
      "env": {
         "jest": true
      }
   }
}
